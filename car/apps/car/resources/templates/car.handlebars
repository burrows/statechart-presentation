{{#view Car.speedometerView}}
  {{speed}}
  {{#view Car.currentStatesView}}
    {{currentStates}}
  {{/view}}
{{/view}}

<div id="controls">
  {{view Car.brakePedalView }}
  {{view Car.gasPedalView }}
  {{view Car.ignitionButtonView}}
  <div class="clear-both"></div>
</div>

<div id="radio">
  <div id="radio-controls">
    {{view Car.radioButtonView}}
    {{#view Car.radioModeView}}
      <input type="radio" name="radio-mode" value="am" />AM<br/>
      <input type="radio" name="radio-mode" value="fm" />FM<br/>
      <input type="radio" name="radio-mode" value="cd" />CD
      {{displayValue}}
    {{/view}}
  </div>
  {{#view Car.radioDisplayView}} {{value}} {{/view}}
  <div class="clear-both"></div>
</div>
